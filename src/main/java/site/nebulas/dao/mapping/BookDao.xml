<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.nebulas.dao.BookDao">

	<select id="bookQueryByParam" resultType="Book">
		select 
			book_id bookID,
			serial_number serialNumber,
			book_name bookName,
			book_author bookAuthor,
			book_concern bookConcern,
			book_edition bookEdition,
			book_price bookPrice,
			book_desc bookDesc
		from book
	</select>
	
	
	<insert id="insert">
		insert into book (serial_number,book_name,book_author,book_concern,book_edition,book_price,book_desc) 
		values (#{serialNumber},#{bookName},#{bookAuthor},#{bookConcern},#{bookEdition},#{bookPrice},#{bookDesc})
	</insert>
	
	<update id="update">
		update book
		<set>
			<if test="bookName !=null and bookName !='' ">
				book_name = #{bookName},
			</if>
			<if test="bookAuthor !=null and bookAuthor !='' ">
				book_author = #{bookAuthor},
			</if>
			<if test="bookDesc !=null and bookDesc !='' ">
				book_desc = #{bookDesc},
			</if>
			<if test="publishingCompany !=null and publishingCompany !='' ">
				publishing_company = #{publishingCompany},
			</if>
			<if test="price !=null and price !='' ">
				price = #{price},
			</if>
			<if test="publishingYear !=null and publishingYear !='' ">
				publishing_year = #{publishingYear},
			</if>
			<if test="bookPic !=null and bookPic !='' ">
				book_pic = #{bookPic},
			</if>
			<if test="bookURL !=null and bookURL !='' ">
				book_url = #{bookURL},
			</if>
			<if test="categoryID !=null and categoryID !='' ">
				category_id = #{categoryID},
			</if>
			<if test="isHot != null ">
				is_hot = #{isHot},
			</if>
			<if test="isRecommend != null ">
				is_recommend = #{isRecommend},
			</if>
			<if test="isTop != null ">
				is_top = #{isTop},
			</if>
			<if test="updateTime !=null and updateTime !='' ">
				update_time = #{updateTime}
			</if>
		</set>
		where book_id = #{bookID}
	</update>
	
	<delete id="delete">
		delete from book
		where book_id = #{bookID}
	</delete>
</mapper>